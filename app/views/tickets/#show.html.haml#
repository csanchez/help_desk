#ticket
  #ticket_panel
    #ticket_header
      = @ticket.created_at_before_type_cast
      %br
      = "Categoria: #{Category.find(@ticket.category_id).name}"
      %br
      = "Estado: #{Status.find(@ticket.status_id).name}"
      %br
      %br
    #ticket_body
      #text        
        = @ticket.body
    #link
      = link_to_remote 'Responder', 
      -# :url => {:controller => 'comments', :action => 'new', :id => @ticket.id}
  #comment_form
#comments
  = render :partial => 'comments/comment', :collection => @ticket.comments
.link
  = link_to "Regresar", tickets_url
