%h4= "Solicitud de soporte #{@ticket.id}"
#ticket_show
  #ticket_show_header
    .ticket_show_header_item{:id => 'information'}
      %h5= "Informacion general."
      %p
        = "De: #{@user_profile.fullname}"
        %br= "Creado: #{@ticket.created_at_before_type_cast}"
        %br= "Categoria: #{Category.find(@ticket.category_id).name}"
        %br= "Estado: #{Status.find(@ticket.status_id).name}"
    .ticket_show_header_item{:id => 'contact'}
      %h5= "Contacto."
      %p
        = "Email: #{@user_profile.email}"
        %br= "Telefono: #{@user_profile.phone}"
  #ticket_body
    = @ticket.body
  %br
  #actions
    = link_to_remote "Responder", :url => new_comment_path(:ticket_id => @ticket.id), :update => {:success => "comment_form"}, :method => :get
  #comment_form 
#comment_collection
  = render :partial => 'comments/comment_father', :collection => @ticket.comments 
  
  

