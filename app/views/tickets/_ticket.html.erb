<div class="ticket">
  <p>
    <div class="tk_note">
      <div class ="note">
      Creado :
      </div>
      <%= ticket.created_at_before_type_cast %>
    </div>
  </p>
  <p>
    <div class="tk_note">
      <div class ="note">
        Categoria :
      </div>
      <%= Category.find(ticket.category_id).name %>
    </div>
  </p>
  <p>
    <div class="tk_note">
      <div class ="note">
        Status :
      </div>
      <%= Status.find(ticket.status_id).name %>
    </div>
  </p>
  <p>
    <div class="tk_note">
      <div class ="note">
        Descripcion :
      </div>
      <%= ticket.body %>
    </div>
  </p>
  
  <div class="button">
    <%= button_to "Detalles", {:action => 'show_ticket', :id => ticket.id }, :method => :show  %>
  </div>
  <div class="button">
    <%= button_to "Cancelar", { :action => 'destroy', :id => ticket.id }, :method => :destroy, :confirm => "estas seguro?" %>
  </div>
  
  ----------------
  <br>
</div>


