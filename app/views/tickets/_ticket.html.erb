

<div class="icon_order">
    <%= image_tag("icon_order.jpg") %>
  </div>
<div class="ticket_row">
  
  <div class="ticket_row_panel">
    <div class="ticket_category">
      <%= Category.find(ticket.category_id).name %>
    </div>
    <div class="ticket_status">
      <%= Status.find(ticket.status_id).name %>
    </div>
    <div class="ticket_body1">
      <%= ticket.body.slice(0, 20) %>...
    </div>
    <div class="ticket_date">
      <%= ticket.created_at_before_type_cast %>
    </div>
  </div>



  <div id="ticket_actions">
    <%= link_to("Detalles", {:action => 'show_ticket', :id => ticket.id},{:id => "link_details"}) %> 
    
    <%= link_to(@permission.name, {:action => @permission.action , :id => ticket.id,:method => @permission.method , :confirm => @permission.message} ,{:id => @permission.id_tag}) %>
  </div>
  

</div>  



