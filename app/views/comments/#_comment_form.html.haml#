#comment_errors
-#- form_for @comment, @parameters[:url],:html => {:id => "comment_form_#{@comment.dom_id}"} do |comment_form|
- form_for @comment, ticket_path(@ticket),:html => {:id => "comment_form_#{@comment.dom_id}"} do |comment_form|
  -#= puts @comment.dom_id
  = comment_form.text_field :subject, :value => @parameters[:subject]
  = comment_form.text_area :body
  = comment_form.hidden_field :ticket_id, @ticket.id
  = comment_form.hidden_field :user, :value => @user_profile.login
  #send_comment_form
    = submit_tag "Enviar comentario"
  #cancel
    = link_to_function "Cancelar",%Q($("#comment_form_#{@comment.dom_id}").empty();)
