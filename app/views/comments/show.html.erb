<h1>Comments#show</h1>
<p>Find me in app/views/comments/show.html.erb</p>


<div id="comment_title">
  <h4> Comentarios</h4>
</div>
  

<div id="comments">
  <%= render :partial => 'comment', :collection => @comment2.children if @comment2.children.size > 0 %>
 
</div>




  <div id="comment_form">
    <div id="panel">      
      <%= error_messages_for :comment %>
      <% form_for :comment, @comment2, :url => {:action => 'create' , :id => @comment2.ticket_id} do |comment_form| %>
      <%= comment_form.text_area :body %>
      <div id="send_comment">
        <%= submit_tag "Agregar comentario" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
