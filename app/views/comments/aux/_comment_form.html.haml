#comment_panel_form
  #comment_errors
  - remote_form_for @comment, @parameters[:url] do |comment_form|
    = comment_form.text_field :subject, :value => @parameters[:subject]
    = comment_form.text_area :body
    = comment_form.hidden_field :ticket_id, :value => @parameters[:id]
    #send_comment_form
      = submit_tag "Enviar comentario"
      = button_to_function "Cancelar", "$('comment_panel_form').remove();"


