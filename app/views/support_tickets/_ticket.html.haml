.ticket
  .ticket_panel
    .ticket_header
      .ticket_category
        = "Categoria: #{Category.find(ticket.category_id).name}"
      .ticket_user
        = "De: #{User.find(ticket.user_id).login}"
      .ticket_status
        = "Estatus: #{Status.find(ticket.status_id).name}"
      .ticket_date
        = "Creado: #{ticket.created_at_before_type_cast}"
      .ticket_body
        = ticket.body.slice(0, 20)
  .ticket_actions
    = link_to("Detalles", user_ticket_path(ticket) , :class => "link_details")
    -#= link_to "Cancelar", user_ticket_path(ticket), {:method => :delete, :confirm => "Estas seguro?"}, {:class => "link_cancel"}
