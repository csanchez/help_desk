= "Solicitud de soporte #{@ticket.id}"
%br
= "Secretaria tecnica de computo"
%br
#ticket
  #ticket_panel
    #ticket_header
      .date
        = @ticket.created_at_before_type_cast
      .category
        = "Categoria: #{Category.find(@ticket.category_id).name}"
      .status{:id => "status_#{@ticket.dom_id}"}
        = "Estado: #{Status.find(@ticket.status_id).name}"
    #ticket_body
      #text        
        = @ticket.body
    #links
      = link_to_remote 'Responder', :url =>  new_ticket_comment_path(@ticket),:method => :get, :html => { :class => 'responder' }
      = link_to "Cancelar", support_ticket_path(@ticket), {:method => :delete, :confirm => "Estas seguro?"}
      = link_to_remote 'Atender', :url => new_support_ticket_path(:id => @ticket.id), :method => :get
      = link_to_remote 'Suspender', :url => edit_support_ticket_path(@ticket), :method => :get
      = link_to "Re-asignar"
  #comment_form
#comments
  = render :partial => 'comments/comment', :collection => @ticket.comments


.link
  = link_to "Regresar", support_tickets_url
